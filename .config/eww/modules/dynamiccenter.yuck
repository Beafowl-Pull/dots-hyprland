(defwidget dynamiccenter_widget []
  (box
    :vexpand true
    :orientation "h" :space-evenly false
    (box
      :space-evenly false
      :orientation "v"
      (box ; Module 1: Volume, Brightness
        :class "dynamic-module"
        :style "
        ${(osd_vol || osd_bright) ? '' : 'margin-top: -${BAR_HEIGHT+1}px;'}
        "
        (osd_widget)
      )
      (box ; Module 2: Workspaces
        :class "dynamic-module"
        :style "
        ${(osd_vol || osd_bright) ? 'margin-bottom: -${BAR_HEIGHT+1}px;' : ''}
        "
        (workspaces_widget)
      )
    )
  )
)